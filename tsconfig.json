{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": [
    "src",
    "typings"
  ]
}
